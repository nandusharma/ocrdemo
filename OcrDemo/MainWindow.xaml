<Window x:Class="OcrDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OCR Demo" Height="350" Width="525" WindowStartupLocation="CenterScreen" VerticalContentAlignment="Stretch"  >
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="517">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Select a image to be converted:" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Top" Width="196"/>
        <TextBox Grid.Row="1" HorizontalAlignment="Left" Height="23" Margin="30,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="388" Name="txtFilePath"/>
        <Button Grid.Row="1" Content="Select File" HorizontalAlignment="Left" Margin="423,0,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

        <Button  Grid.Row="2" Content="Read Image" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <TextBox  Grid.Row="3" TextWrapping="Wrap" Name="txtScanResult" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="497"/>

    </Grid>
</Window>
